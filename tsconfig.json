{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "packages/ui-*/src/index.ts"
      ]
    },
    "outDir": ".tmp",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsxImportSource": "@emotion/react",
    "ts-node": {
      "esm": true
    }
  }
}
